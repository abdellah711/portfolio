---
import Navbar from "../components/Navbar/Navbar";
import Posthog from "../components/Posthog.astro";
import { SOCIAL_MEDIA } from "../utils/constants";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="bg-base-300 scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/devicon.min.css"
    />
    <title>{title}</title>
    <meta
      name="description"
      content="Experienced Software Engineer with a strong skill set in TypeScript, React, and NodeJS, built through a combination of academic learning and practical experience since 2018."
    />
    <meta property="og:title" content="Alaoui Abdellah | Software Engineer" />
    <meta
      property="og:description"
      content="Experienced Software Engineer with a strong skill set in TypeScript, React, and NodeJS, built through a combination of academic learning and practical experience since 2018."
    />
    <script
      is:inline
      type="application/ld+json"
      set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": "Person",
        name: "Alaoui Abdellah",
        jobTitle: "Software Engineer",
        sameAs: SOCIAL_MEDIA.map(({ url }) => url),
      })}
    />
    <Posthog />
    <script>
      import { captureEvent } from "../utils/posthog";
      // track cta clicks
      document.querySelectorAll('a[href="#contact"]').forEach((btn) => {
        btn.addEventListener("click", () => {
          captureEvent("cta_click", {
            event_label: "contact",
          });
        });
      });
      // track download resume
      document.querySelector("a#download-cv")?.addEventListener("click", () => {
        captureEvent("cta_click", {
          event_label: "resume",
        });
      });
    </script>
  </head>
  <body>
    <Navbar />
    <slot />
  </body>
</html>
